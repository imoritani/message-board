<div class="panel panel-default">
 <div class="panel-heading">
   メッセージ一覧
 </div>
 <div class="panel-body">
  <% @messages.each do |msg| %>
  <span class="label label-info"><%= msg.name %></span>
  <%= msg.body %>
  <br>
  <% end %>
 </div>
</div>

<%= form_for(@message) do |f| %>
名前: 
 <%= f.text_field :name%>
内容:
 <%= f.text_field :body%>
 <%= f.submit%>
 <% end %>
