<div class="panel panel-default">
 <div class="panel-heading">
   メッセージ一覧
 </div>
 <div class="panel-body">
  <% @messages.each do |msg| %>
  <span class="label label-info"><%= msg.name %></span>
  <%= msg.body %>
  (<%= link_to "edit", edit_message_path(msg) %>)
  (<%= link_to "destroy", msg, method: :delete, data: {confirm: "is this really destroy?"} %>)
  <br>
  <% end %>
 </div>
</div>

<%= render 'form' %>

