<div class="panel panel-default">
 <div class="panel-heading">
   メッセージ一覧
 </div>
 <div class="panel-body">
  <% @messages.each do |msg| %>
  <span class="label label-info"><%= msg.name %></span>
  <%= msg.body %>
  <br>
  <% end %>
 </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
   <%= f.label "名前: ", for: "nameLabel", class: "col-sm-1 control-label" %>
   <div class="col-sm-11">
    <%= f.text_field :name , id: "nameLabel", class: "form-control" %>
   </div>
  </div>
 
  <div class="form-group">
   <%= f.label "内容: ", for: "contentLabel", class: "control-label col-sm-1" %>
   <div class="col-sm-11">
    <%= f.text_area :body, id: "contentLabel", class: "form-control" %>
   </div>
  </div>

 <div class="form-group">
  <div class="col-sm-offset-1 col-sm-11">
   <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
 </div>
 <% end %>
 